<%= form_for (task) do |f| %>
<div class="row">
<div class="form-group col-md-6">
  <%= f.label :description, class: 'form-label' %>
  <%= f.text_field :description, class: 'form-control' %>
</div>
</div>
<div class="row">
  <div class="form-group col-md-6">
    <%= f.label :completion_date, class: 'form-label' %>
    <%= f.text_field :completion_date, class: 'datepicker form-control', "data-provide": 'datepicker' %>
  </div>
</div>
<div class="row">
  <div class="form-group col-md-4">
    <%= f.submit :submit, class: 'btn btn-block btn-primary' %>
  </div>
</div>
<% end %>
